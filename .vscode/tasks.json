{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pickems: run pprof",
      "type": "shell",
      "command": "cargo run --profile=pprof --features=pprof && pprof -http=localhost:8080 target/profile.pb",
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "pickems: run criterion",
      "type": "cargo",
      "command": "bench",
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "pickems: run simulation on newest input file",
      "type": "cargo",
      "command": "run --release -- simulate -f data/$(ls data -Art | tail -n 1)",
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "presentation": {
        "clear": true
      }
    }
  ]
}